# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.lua]
indent_size = 2

[*.{yml,yaml,json}]
indent_size = 2

[*.md]
max_line_length = 0
indent_size = 2

[Makefile]
indent_style = tab
